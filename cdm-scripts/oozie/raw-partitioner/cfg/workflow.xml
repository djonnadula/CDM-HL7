<workflow-app name="${WF_NAME}" xmlns="uri:oozie:workflow:0.5">
    <credentials>
        <credential name="hcat" type="hcat">
            <property>
                <name>hcat.metastore.uri</name>
                <value>${HCAT.METASTORE.URI}</value>
            </property>
            <property>
                <name>hcat.metastore.principal</name>
                <value>${HCAT.METASTORE.PRINCIPAL}</value>
            </property>
        </credential>
    </credentials>
    <start to="check-for-files"/>
    <action name="Kill">
        <email xmlns="uri:oozie:email-action:0.2">
            <to>${EMAIL}</to>
            <subject>${ENVIRONMENT}: ${wf:name()} Job Failure</subject>
            <body>The ${wf:name()} Oozie job has failed.
JobId: ${wf:id()}
JobPath: ${wf:appPath()}
ErrorMessage: ${wf:errorMessage(wf:lastErrorNode())}
            </body>
        </email>
        <ok to="Kill-kill"/>
        <error to="Kill-kill"/>
    </action>
    <kill name="Kill-kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <action name="addPartition" cred="hcat">
        <hive xmlns="uri:oozie:hive-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <job-xml>${workflowPath}/lib/${ENVIRONMENT}-hive-config.xml</job-xml>
            <script>${SCRIPT_PATH}</script>
            <param>MESSAGE_TYPE=${MESSAGE_TYPE}</param>
            <param>MESSAGE_DATE=${MESSAGE_DATE}</param>
            <param>FILE_CHECK_PATH=${FILE_CHECK_PATH}</param>
        </hive>
        <ok to="End"/>
        <error to="Kill"/>
    </action>
    <decision name="check-for-files">
        <switch>
            <case to="addPartition">
                ${fs:exists(FILE_CHECK_PATH)=='true'}
            </case>
            <default to="no-files-available-email"/>
        </switch>
    </decision>
    <action name="no-files-available-email">
        <email xmlns="uri:oozie:email-action:0.2">
            <to>${EMAIL}</to>
            <subject>${ENVIRONMENT}: ${wf:name()} Partition Available</subject>
            <body>${wf:name()}: No partition to add at this path: '${FILE_CHECK_PATH}'
JobId: ${wf:id()}
JobPath: ${wf:appPath()}
            </body>
        </email>
        <ok to="End"/>
        <error to="Kill"/>
    </action>
    <end name="End"/>
</workflow-app>