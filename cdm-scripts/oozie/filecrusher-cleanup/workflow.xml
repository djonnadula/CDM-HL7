<workflow-app name="CDM_BD_File_Crusher_Cleanup" xmlns="uri:oozie:workflow:0.5">
    <start to="fs-ace4"/>
    <action name="Kill">
        <email xmlns="uri:oozie:email-action:0.2">
            <to>CorpISDLCDM-EDW@HCAHealthcare.com</to>
            <subject>${wf:name()} Job Failure</subject>
            <body>The ${wf:name()} Oozie job has failed.
JobId: ${wf:id()}
JobPath: ${wf:appPath()}
ErrorMessage: ${wf:errorMessage(wf:lastErrorNode())}</body>
        </email>
        <ok to="Kill-kill"/>
        <error to="Kill-kill"/>
    </action>
    <kill name="Kill-kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <action name="fs-ace4">
        <fs>
              <delete path='hdfs://nameservice1/user/hive/warehouse/hl7.db/hl7_all_segment_data/clone'/>
              <delete path='hdfs://nameservice1/user/hive/warehouse/hl7.db/hl7_audit_data/clone'/>
              <delete path='hdfs://nameservice1/user/hive/warehouse/cdm_scri/nlp_patient_id_data/clone'/>
              <delete path='hdfs://nameservice1/user/hive/warehouse/hl7.db/hl7_json_data/clone'/>
              <delete path='hdfs://nameservice1/user/hive/warehouse/hl7.db/raw/message_type=adt/clone'/>
              <delete path='hdfs://nameservice1/user/hive/warehouse/hl7.db/raw/message_type=mdm/clone'/>
              <delete path='hdfs://nameservice1/user/hive/warehouse/hl7.db/raw/message_type=oru/clone'/>
              <delete path='hdfs://nameservice1/user/hive/warehouse/hl7.db/hl7_all_proc_rejected/clone'/>
        </fs>
        <ok to="End"/>
        <error to="Kill"/>
    </action>
    <end name="End"/>
</workflow-app>