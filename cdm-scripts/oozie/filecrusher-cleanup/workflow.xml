<workflow-app name="CDM_BD_File_Crusher_Cleanup" xmlns="uri:oozie:workflow:0.5">
    <start to="delete-clone-dirs"/>
    <action name="Kill">
        <email xmlns="uri:oozie:email-action:0.2">
            <to>CorpISDLCDM-EDW@HCAHealthcare.com</to>
            <subject>${wf:name()} Job Failure</subject>
            <body>The ${wf:name()} Oozie job has failed.
                    JobId: ${wf:id()}
                    JobPath: ${wf:appPath()}
                    ErrorMessage: ${wf:errorMessage(wf:lastErrorNode())}
            </body>
        </email>
        <ok to="Kill-kill"/>
        <error to="Kill-kill"/>
    </action>
    <kill name="Kill-kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <action name="delete-clone-dirs">
        <fs>
              <delete path='${hl7_all_segment_data_clone_path}'/>
              <delete path='${hl7_audit_data_clone_path}'/>
              <delete path='${nlp_patient_id_data_path_clone}'/>
              <delete path='${hl7_json_data_clone_path}'/>
              <delete path='${raw_adt_clone_path}'/>
              <delete path='${raw_mdm_clone_path}'/>
              <delete path='${raw_oru_clone_path}'/>
              <delete path='${hl7_all_proc_rejected_clone_path}'/>
        </fs>
        <ok to="End"/>
        <error to="Kill"/>
    </action>
    <end name="End"/>
</workflow-app>