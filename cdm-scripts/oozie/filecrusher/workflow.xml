<workflow-app name="${WF_NAME}" xmlns="uri:oozie:workflow:0.5">
    <start to="check-for-files"/>
    <action name="Kill">
        <email xmlns="uri:oozie:email-action:0.2">
            <to>${EMAIL}</to>
            <subject>${wf:name()} Job Failure</subject>
            <body>The ${wf:name()} Oozie job has failed.
                    JobId: ${wf:id()}
                    JobPath: ${wf:appPath()}
                    ErrorMessage: ${wf:errorMessage(wf:lastErrorNode())}</body>
        </email>
        <ok to="Kill-kill"/>
        <error to="Kill-kill"/>
    </action>
    <kill name="Kill-kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <action name="hdfs-ops">
        <fs>
            <mkdir path='${CRUSH_PATH}'/>
            <mkdir path='${CLONE_PATH}'/>
            <move source='${SOURCE_PATH}/*.snappy' target='${CRUSH_PATH}'/>
        </fs>
        <ok to="filecrusher"/>
        <error to="Kill"/>
    </action>
    <action name="filecrusher">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>${MAIN_CLASS}</main-class>
            <java-opts></java-opts>
            <arg>${CRUSH_PATH}</arg>
            <arg>${CLONE_PATH}</arg>
            <arg>${NUM_DAYS_BEFORE}</arg>
            <arg>--input-format=sequence</arg>
            <arg>--output-format=sequence</arg>
            <arg>--clone</arg>
        </java>
        <ok to="hdfs-move"/>
        <error to="Kill"/>
    </action>
    <action name="hdfs-move">
        <fs>
            <move source='${CRUSH_PATH}/*' target='${SOURCE_PATH}'/>
        </fs>
        <ok to="End"/>
        <error to="Kill"/>
    </action>
    <decision name="check-for-files">
        <switch>
            <case to="hdfs-ops">
                ${fs:exists(FILE_CHECK_PATH)=='true'}
            </case>
            <default to="no-files-available-email"/>
        </switch>
    </decision>
    <action name="no-files-available-email">
        <email xmlns="uri:oozie:email-action:0.2">
            <to>${EMAIL}</to>
            <subject>${wf:name()} No Files Available</subject>
            <body>${wf:name()}: No files to process at this path: '${FILE_CHECK_PATH}'
JobId: ${wf:id()}
JobPath: ${wf:appPath()}
            </body>
        </email>
        <ok to="End"/>
        <error to="Kill"/>
    </action>
    <end name="End"/>
</workflow-app>