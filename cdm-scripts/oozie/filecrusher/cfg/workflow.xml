<workflow-app name="${WF_NAME}" xmlns="uri:oozie:workflow:0.5">
    <start to="check-for-files"/>
    <action name="Kill">
        <email xmlns="uri:oozie:email-action:0.2">
            <to>${EMAIL}</to>
            <subject>${ENVIRONMENT}: ${wf:name()} Job Failure</subject>
            <body>The ${wf:name()} Oozie job has failed.
JobId: ${wf:id()}
JobPath: ${wf:appPath()}
ErrorMessage: ${wf:errorMessage(wf:lastErrorNode())}</body>
        </email>
        <ok to="Kill-kill"/>
        <error to="Kill-kill"/>
    </action>
    <kill name="Kill-kill">
        <message>Action failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <decision name="check-for-files">
        <switch>
            <case to="copy-precrushed-files">
                ${fs:exists(FILE_CHECK_PATH)=='true'}
            </case>
            <default to="no-files-available-email"/>
        </switch>
    </decision>
    <action name="copy-precrushed-files">
        <distcp xmlns="uri:oozie:distcp-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <arg>-update</arg>
            <arg>-skipcrccheck</arg>
            <arg>${SOURCE_PATH}/*.snappy</arg>
            <arg>${CRUSH_PATH}/in</arg>
        </distcp>
        <ok to="filecrusher"/>
        <error to="filecrusher-fail"/>
    </action>
    <action name="filecrusher">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>${MAIN_CLASS}</main-class>
            <java-opts></java-opts>
            <arg>${CRUSH_PATH}/in</arg>
            <arg>${CRUSH_PATH}/out</arg>
            <arg>${NUM_DAYS_BEFORE}</arg>
            <arg>--input-format=sequence</arg>
            <arg>--output-format=sequence</arg>
        </java>
        <ok to="hdfs-cleanup"/>
        <error to="filecrusher-fail"/>
    </action>
    <action name="hdfs-cleanup">
        <fs>
            <delete path='${SOURCE_PATH}/*.snappy'/>
            <move source='${CRUSH_PATH}/out/*' target='${SOURCE_PATH}'/>
            <delete path='${CRUSH_PATH}'/>
        </fs>
        <ok to="End"/>
        <error to="filecrusher-fail"/>
    </action>
    <action name="filecrusher-fail">
        <fs>
            <delete path='${CRUSH_PATH}'/>
        </fs>
        <ok to="Kill"/>
        <error to="Kill"/>
    </action>
    <action name="no-files-available-email">
        <email xmlns="uri:oozie:email-action:0.2">
            <to>${EMAIL}</to>
            <subject>${ENVIRONMENT}: ${wf:name()} No Files Available</subject>
            <body>${wf:name()}: No files to process at this path: '${FILE_CHECK_PATH}'
JobId: ${wf:id()}
JobPath: ${wf:appPath()}
            </body>
        </email>
        <ok to="End"/>
        <error to="Kill"/>
    </action>
    <end name="End"/>
</workflow-app>