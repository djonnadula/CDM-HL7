        <PROD.HCAT.METASTORE.URI>thrift://xrdclpbdm010001.unix.medcity.net:9083</PROD.HCAT.METASTORE.URI>
        <QA.HCAT.METASTORE.URI>thrift://xrdcldbdm010001.unix.medcity.net:9083</QA.HCAT.METASTORE.URI>
        <PROD.HCAT.METASTORE.PRINCIPAL>hive/xrdclpbdm010001.unix.medcity.net@HCA.CORPAD.NET</PROD.HCAT.METASTORE.PRINCIPAL>
        <QA.HCAT.METASTORE.PRINCIPAL>hive/xrdcldbdm010001.unix.medcity.net@HCA.CORPAD.NET</QA.HCAT.METASTORE.PRINCIPAL>

